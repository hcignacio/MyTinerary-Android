<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/cityPicture"
    android:layout_width="0dp"
    android:layout_height="203dp"
    android:background="#FFFFFF"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/cityName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TextView"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textColor="#FFFFFF"
    android:textSize="24sp"
    android:textStyle="bold|italic"
    android:shadowColor="#000000"
    android:shadowDx="-3"
    android:shadowDy="3"
    android:shadowRadius="1"
    app:layout_constraintBottom_toBottomOf="@+id/cityPicture"
    app:layout_constraintEnd_toEndOf="@+id/cityPicture"
    app:layout_constraintStart_toStartOf="@+id/cityPicture"
    app:layout_constraintTop_toTopOf="@+id/cityPicture" />

  <TextView
    android:id="@+id/countryName"
    android:layout_width="242dp"
    android:layout_height="25dp"
    android:shadowColor="#000000"
    android:shadowDx="-1"
    android:shadowDy="1"
    android:shadowRadius="0.5"
    android:text="TextView"
    android:textColor="#FFFFFF"
    app:layout_constraintBottom_toBottomOf="@+id/cityPicture"
    app:layout_constraintEnd_toEndOf="@+id/cityPicture"
    app:layout_constraintHorizontal_bias="0.05"
    app:layout_constraintStart_toStartOf="@+id/cityPicture"
    app:layout_constraintTop_toTopOf="@+id/cityPicture"
    app:layout_constraintVertical_bias="0.96" />

  <ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyle"
    android:layout_width="34dp"
    android:layout_height="24dp"
    app:layout_constraintBottom_toBottomOf="@+id/cityPicture"
    app:layout_constraintEnd_toEndOf="@+id/cityPicture"
    app:layout_constraintHorizontal_bias="0.964"
    app:layout_constraintStart_toStartOf="@+id/cityPicture"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.089" />

  <Button
    android:id="@+id/cityButton"
    android:layout_width="50dp"
    android:layout_height="27dp"
    android:layout_marginStart="88dp"
    android:layout_marginBottom="8dp"
    android:background="#EBFFFFFF"
    android:text="Map"
    app:layout_constraintBottom_toBottomOf="@+id/cityPicture"
    app:layout_constraintStart_toEndOf="@+id/countryName" />
</androidx.constraintlayout.widget.ConstraintLayout>